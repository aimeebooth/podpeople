= form_for [network, show] do |f|
  - if show.errors.any?
    #error_explanation
      %h2= "#{pluralize(show.errors.count, "error")} prohibited this show from being saved:"
      %ul
        - show.errors.full_messages.each do |msg|
          %li= msg
          
  %p         
    = f.label :name
    = f.text_field :name

  %p
    = f.label :description
    = f.text_area :description

  .actions
    = f.submit 'Save'
