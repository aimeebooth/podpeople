%h2 Tapings Index

%table
  %tr
    %th Name
    %th
  - tapings.each do |taping|
    %tr
      %td= link_to taping.name, [taping.episode, taping]
      %td= link_to 'Edit', edit_episode_taping_path(taping.episode, taping)
      %td= link_to "Delete", [taping.episode, taping], method: :delete, confirm: "Are you sure you want to ba-lete this?"

%p= link_to 'Add Taping', new_episode_taping_path(episode)
