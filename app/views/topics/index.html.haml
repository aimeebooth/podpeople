%h2 Topics Index

%table
  %tr
    %th Name
    %th
  - topics.each do |topic|
    %tr
      %td= link_to topic.name, [topic.episode, topic]
      %td= link_to 'Edit', edit_episode_topic_path(topic.episode, topic)
      %td= link_to "Delete", [topic.episode, topic], method: :delete, confirm: "Are you sure you want to ba-lete this?"

%p= link_to 'Add Topic', new_episode_topic_path(episode)
