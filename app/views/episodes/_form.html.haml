= form_for [show, episode] do |f|
  - if episode.errors.any?
    #error_explanation
      %h2= "#{pluralize(episode.errors.count, "error")} prohibited this show from being saved:"
      %ul
        - episode.errors.full_messages.each do |msg|
          %li= msg
          
  %p         
    = f.label :title
    = f.text_field :title

  %p
    = f.label :description
    = f.text_area :description

  .actions
    = f.submit 'Save'
